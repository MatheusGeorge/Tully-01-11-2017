<resources>

    <!--Cor da caixa de dialogo-->
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/gradient_2</item>
        <item name="android:textColor">@color/colorBranco</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--cor do separador do menu lateral-->
        <item name="android:listDivider">@color/colorPrimaryDark</item>
        <!--cor do query do searchview-->
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <!--cor da barra embaixo do query (não funciona)-->
        <item name="queryBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TullyTheme" parent="AppTheme" />

    <!--cor do título do menu lateral-->
    <style name="MenuTitle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
